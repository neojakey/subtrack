{
    "name": "subtrack/subtrack",
    "description": "Subscription tracking web application",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "google/apiclient": "^2.0",
        "phpmailer/phpmailer": "^6.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "classmap": [
            "classes/"
        ]
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "config": {
        "optimize-autoloader": true
    }
}